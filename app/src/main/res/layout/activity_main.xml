<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cs_pocket"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_margin="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calculatorButton"
            android:layout_width="166dp"
            android:layout_height="144dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/calc"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/purple_500"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="143dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:onClick="calculator"
            android:focusable="true"
            />
        <Button
            android:id="@+id/wordButton"
            android:layout_width="166dp"
            android:layout_height="144dp"
            android:layout_marginStart="-30dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/purple_500"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="143dp"
            android:clickable="true"
            android:onClick="word"
            android:focusable="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/cs2logo" />


    </LinearLayout>
    <Button
        android:id="@+id/paintButton"
        android:layout_width="166dp"
        android:layout_height="144dp"
        android:scaleType="fitCenter"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="143dp"
        android:backgroundTint="@color/purple_500"
        android:clickable="true"
        android:onClick="painting"
        android:focusable="true"
        android:layout_marginLeft="120dp"
        android:background="@drawable/color_palette" />

</LinearLayout>